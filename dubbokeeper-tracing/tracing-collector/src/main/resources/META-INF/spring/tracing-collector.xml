<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="dubbo.properties"/>

    <dubbo:application name="${dubbo.application.name}" owner="${dubbo.application.owner}"/>

    <bean class="com.dubboclub.dk.collector.Configuration" id="configuration">
        <property name="threadPoolSize" value="${tracing.collector.storage.thread.size}"/>
    </bean>

    <bean id="defaultCollectionService" class="com.dubboclub.dk.collector.support.DefaultCollectionService">
        <constructor-arg name="configuration" ref="configuration"/>
        <!--<property name="traceDataStorage" ref="traceDataStorage"/>-->
    </bean>

    <dubbo:service interface="com.dubboclub.dk.tracing.api.TracingCollector" ref="defaultCollectionService"/>
</beans>